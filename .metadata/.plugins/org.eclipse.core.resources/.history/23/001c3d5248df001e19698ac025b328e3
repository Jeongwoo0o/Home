package b_encapsulation;

/*
	캡슐화 
	
		기본적으로	멤버 변수는 private 지정
				멤버 메소드는 public 지정
*/

public class Student {

	private String name;
	private int kor, eng, math;
	private int total;
	private double avg;
	
	public int calTotal() {
		total = kor + eng + math;
		return total;
	}
	
	public double calAvg() {
		avg = (double)total / 3;
		return avg;
	}
}


