package d_array;

public class Ex07_로또 {
	public static void main(String[] args) {

		int [][] lotto = new int[5][6];
		
		// 로또번호 생성
		for(int i = 0; i < lotto.length; i++) {
			for(int j = 0 ; j < lotto[i].length; j++) {
				lotto[i][j] = (int)(Math.random()*45) + 1;
				for(int k = 0; k < j; k++) {
					if(lotto[i][k] == lotto[i][j]) {
						j--;
					}	//end if
				}	//end for(k)
			}	//end for(j)
		}	//end for(i)
		
		//정렬
		for(int i = 0; i < lotto.length; i++) {
			for(int j = lotto.length; j >= 0; j--) {
				for(int k = 0; k < j; k++) {
					if(lotto[i][k] > lotto[i][j]) {
						int temp 	= lotto[i][k];
						lotto[i][k] = lotto[i][j];
						lotto[i][j] = temp;
					}	//end if
				}	//end for(k)
			}	//end for(j)
		}	//end for(i)
			
		// 출력
		for(int i = 0; i < lotto.length; i++) {
			for(int j = 0; j < lotto[i].length; j++) {
				System.out.print(lotto[i][j] + " ");
			}	//end for(j)
			System.out.println();
		}	//end for(i)
		
	}
}
































