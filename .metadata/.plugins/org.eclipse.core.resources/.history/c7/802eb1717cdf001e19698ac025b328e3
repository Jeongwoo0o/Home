package d_constructor2;

public class GradeExpr {
	
	int[] jumsu;
	
	GradeExpr(int[] jumsu) {
		this.jumsu = jumsu;
	}
	
	double getAverage() {
		return (double)getTotal() / jumsu.length;
	}
	
	int getTotal() {
		int total = 0;
		for(int i = 0; i < jumsu.length; i++) {
			total += jumsu[i];
		}
		return total;
	}
	
	int getGoodScore() {
		int max = jumsu[0];
		for(int i = 0; i < jumsu.length; i++) {
			if(max < jumsu[i]) {
				max = jumsu[i];
			}
		}
		return max;
	}
	
	int getBadScore() {
		int min = jumsu[0];
		for(int i = 0; i < jumsu.length; i++) {
			if(min > jumsu[i]) {
				min = jumsu[i];
			}
		}
		return min;
	}
}
