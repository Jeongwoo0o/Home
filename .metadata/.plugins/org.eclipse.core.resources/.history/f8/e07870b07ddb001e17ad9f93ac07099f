package d_array;

/*
 * 	임의의 수 (랜덤 수)
 * 		
 * 		Math.random() : 0.0부터 1.0보다 작은 어떤 수
 * 		
 * 		ex) 0.0000008
 * 			0.5812052
 * 
 * 		Math.random() * 10
 * 
 * 		ex) 0.000008
 * 			5.812052
 *  		
 *  	(int)(Math.random() * 10)
 * 
 * 		ex) 0
 * 			5
 */

public class Ex04_Lotto {
	public static void main(String[] args) {
		
		int [] lotto = new int[6];
		
		// 로또 번호 생성 -> 임의의 수 생성 저장
		for(int i = 0; i < lotto.length; i++) {
			lotto[i] = (int)(Math.random()*45) + 1;
		}	//	end for(i)
		
		for(int j = lotto.length-1; i > 0; i++) {
			for(int k = 0; k < i; k++) {
				int temp 	= lotto[k];
				lotto[k] 	= lotto[k+1];
				lotto[k+1] 	= temp;
			}	//	end for(k)
		}	//	end for(j)
		
		// 출력
		for(int i = 0; i < lotto.length; i++) {
			System.out.print(lotto[i] + " ");
		}
		
	}
}







































